<?xml version="1.0" encoding="utf-8"?>
<!-- Gray shadow. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:left="3dp"
        android:top="5dp">
        <shape>
            <gradient android:startColor="#356B12"
                android:centerColor="#478320"
                android:endColor="#8FD660"
                />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <gradient android:startColor="#4F991E"
                android:centerColor="#44AD40"
                android:endColor="#F0B0CC4D"
                />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>