<?xml version="1.0" encoding="utf-8"?>
<!-- Gray shadow. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:left="3dp"
        android:top="5dp">
        <shape>
            <gradient android:startColor="#AC401C"
                android:centerColor="#B65132"
                android:endColor="#BE5F41"
                />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <gradient android:startColor="#F0DB552D"
                android:centerColor="#F0D36239"
                android:endColor="#DD876C"
                />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>